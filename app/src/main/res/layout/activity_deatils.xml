<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="detailsviewmodel"
            type="quiz.honeywell.com.stockticker.viewmodel.DetailsViewModel">
        </variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:background="@color/colorAccent"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvValue"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvValue1"
                android:text="@string/app_name"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvValue2"
                android:text="@string/app_name"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvType"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvClose"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSymbol"
                android:text="A"
                android:textSize="40sp"
                android:paddingTop="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRange"
                android:text="@string/wkRange"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRangeVal"
                android:text="@string/app_name"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvOpen"
                android:text="@string/Open"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvOpenVal"
                android:text="@string/app_name"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMarket"
                android:text="@string/MarketCap"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMarketVal"
                android:text="@string/app_name"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrev"
                android:text="@string/PrevClose"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrevVal"
                android:text="@string/app_name"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRatio"
                android:text="@string/PERatio"
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRatioVal"
                android:text=""
                android:layout_weight="1"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

</layout>
